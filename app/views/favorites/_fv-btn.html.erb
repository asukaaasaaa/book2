<% if book.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(book),class: 'text-danger',remote:true, method: :delete do %>
        <i class="fas fa-heart"></i><%= book.favorites.count  %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(book),remote:true, method: :post do %>
        <i class="far fa-heart"></i><%= book.favorites.count %>
      <% end %>
    </p>
  <% end %>